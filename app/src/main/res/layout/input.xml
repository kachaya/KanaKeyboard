<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/candidate_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/candidates_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <!--
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white" />
    -->

    <LinearLayout
        android:id="@+id/kyeboard_raw0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/kyeboard_raw1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/kyeboard_raw2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/kyeboard_raw3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:orientation="horizontal"></LinearLayout>

    <!--
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white" />
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_shift"
            style="@style/FunctionButton"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_shift_none" />

        <Button
            android:id="@+id/button_keyboard"
            style="@style/FunctionButton"
            android:layout_weight="1"
            android:text="日" />

        <Button
            android:id="@+id/button_mode"
            style="@style/FunctionButton"
            android:layout_weight="1"
            android:text="あ" />

        <Button
            android:id="@+id/button_space"
            style="@style/FunctionButton"
            android:layout_columnWeight="1"
            android:layout_weight="2"
            android:text="␣" />

        <Button
            android:id="@+id/button_cursor_left"
            style="@style/FunctionButton"
            android:layout_weight="1"
            android:text="◀" />

        <Button
            android:id="@+id/button_cursor_right"
            style="@style/FunctionButton"
            android:layout_weight="1"
            android:text="▶" />

        <Button
            android:id="@+id/button_backspace"
            style="@style/FunctionButton"
            android:layout_weight="1"
            android:text="\u232B" />

        <Button
            android:id="@+id/button_enter"
            style="@style/FunctionButton"
            android:layout_weight="1"
            android:text="\u23CE" />

    </LinearLayout>
</LinearLayout>